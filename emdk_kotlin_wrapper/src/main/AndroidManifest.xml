<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- DataWedge API -->
    <uses-permission android:name="com.symbol.datawedge.permission.RECEIVE_SCAN" />
    <queries>
        <package android:name="com.symbol.datawedge" />
        <intent>
            <action android:name="com.symbol.datawedge.api.ACTION" />
        </intent>
    </queries>

    <!--use EMDK need permission-->
    <uses-permission android:name="com.symbol.emdk.permission.EMDK" />
    <queries>
        <!--Due to package visibility restrictions imposed by Android 11 (API 30), EMDK apps targeting A-11 (or later) must include the following-->
        <package android:name="com.symbol.emdk.emdkservice"/>
    </queries>

    <!-- Zebra Content Provider API -->
    <uses-permission android:name="com.zebra.provider.READ" />
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
        tools:ignore="ProtectedPermissions" />
    <queries>
        <!-- Zebra Content Provider API -->
        <package android:name="com.zebra.zebracontentprovider" />
        <provider android:authorities="oem_info" />
    </queries>

    <!-- Access Control by Device Manager -->
    <uses-permission android:name="com.zebra.devicemanager.provider.READ_PERMISSION"/>
    <queries>
        <package android:name="com.zebra.devicemanager"/>
    </queries>
    <!-- Device Admin -->
    <!--
    <uses-permission android:name="android.permission.BIND_DEVICE_ADMIN" />
    -->
    <application>
        <uses-library android:name="com.symbol.emdk"/>
        <!--
        <receiver android:name=".mx.MXProfileProcessor$DevAdminReceiver"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
        -->
    </application>
</manifest>