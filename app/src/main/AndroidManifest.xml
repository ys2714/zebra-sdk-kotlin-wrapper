<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- DWQuickScanService -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- DeviceBootReceiver -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZebraKotlinDemo">

        <receiver
            android:name=".DeviceBootReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.zebra.zebrakotlindemo.quickscan.DWQuickScanService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="dataSync" />

        <activity
            android:screenOrientation="portrait"
            android:name=".LandingActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ZebraKotlinDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".emdk.EMDKActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".datawedge.DataWedgeActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".rxlogger.RXLoggerActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".datawedge.DataWedgeBasicActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".datawedge.DataWedgeAdvancedActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".datawedge.DataWedgeProfileActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".datawedge.DataWedgeTriggerBasicActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".datawedge.DataWedgeTriggerActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".emdk.ScreenLockActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".emdk.EMDKLockScreenActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".emdk.EMDKPowerButtonMenuActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".emdk.EMDKPowerManagementActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".emdk.EMDKSystemClockActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".emdk.EMDKRecoveryModeActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".emdk.EMDKUSBManagerActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".emdk.EMDKTouchPanelActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".MainActivity">
        </activity>

        <activity
            android:exported="true"
            android:screenOrientation="portrait"
            android:name=".quickscan.QuickScanActivity">
        </activity>
    </application>

</manifest>